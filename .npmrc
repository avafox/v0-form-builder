# NPM Configuration for Sky Security Standards

# Use exact versions by default (no ^ or ~)
save-exact=true

# Require package-lock.json
package-lock=true

# Verify package integrity
package-lock-only=false

# Audit level (fail on high or critical)
audit-level=high

# Use npm ci by default in CI/CD
prefer-offline=false

# Timeout for slow connections
fetch-timeout=300000

# Registry (use corporate registry if available)
# registry=https://your-corporate-registry.com/

# Strict SSL
strict-ssl=true

# Engine strict (enforce node/npm versions)
engine-strict=true
